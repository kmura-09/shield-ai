{
  "manifest_version": 3,
  "name": "ShieldAI - 機密情報フィルタ",
  "version": "0.1.0",
  "description": "ChatGPT/Claude送信前に機密情報を検出・マスク。ローカル処理でデータ外部送信なし。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ]
}
